 <div class="container" style="height: 90vh; background-color:white; display:flex; justify-content:center; flex-direction:column;">

    <div id="carouselExampleControls1" class="carousel slide" data-ride="carousel" data-interval="false" style="width:100%; height:35%">
      <div class="carousel-inner" style="height:100%;" >
        <% @tops.each_with_index do |item, index| %>
          <% if index == 0 %>
            <div class="carousel-item active" style="width:100%; height:225px; background-position: center; background-size:contain; background-repeat:no-repeat; background-image: url('<%= cl_image_path item.photo.key %>')">
            </div>
          <% else %>
            <div class="carousel-item" style="width:100%; height:225px; background-position: center; background-size:contain; background-repeat:no-repeat; background-image: url('<%= cl_image_path item.photo.key %>')">
            </div>
          <% end %>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls1" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls1" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

