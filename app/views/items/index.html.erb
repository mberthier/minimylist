<div class="container mt-5 mb-5">
    <h1>My closet</h1>
    (<%= @items.count %>) items
    <div class="container mt-5 mb-5 d-flex justify-content-between align-items-center flex-wrap">
        <% @items.each do |item| %>
            <div class="mb-4 d-flex justify-content-center" style="width:33%; height:135px;">
                    <%= link_to edit_item_path(item) do %>
                        <img src="<%= cl_image_path item.photo.key %>" width="100%" height="100%">
                    <% end %>
            </div>
        <% end %>
    </div>
    <%= link_to new_item_path do %>
        Add an item
        <i class="fas fa-plus"></i>
    <% end %>
</div>
